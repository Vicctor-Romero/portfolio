---
// src/components/Hero.astro
import CuboAnimado from '../CuboAnimated.tsx';
---
<div class="container mx-auto h-full px-4">
  <div class="grid md:grid-cols-2 gap-8 items-center h-full">
    <div class="text-center md:text-left">
      <h1 class="text-5xl md:text-7xl font-bold text-white leading-tight">
        Hello, I'm Victor
      </h1>
      <p class="mt-4 text-lg md:text-xl text-gray-400 max-w-md mx-auto md:mx-0">
        I'm a creative software developer focused on building seamless, interactive digital experiences that leave a lasting impression.
      </p>
      <div class="mt-8 flex justify-center md:justify-start space-x-4">
        <a href="#proyectos" class="bg-white text-black font-semibold px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors">
          My projects
        </a>
        <a href="https://github.com/tu-usuario" target="_blank" class="border border-gray-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-gray-800 transition-colors">
          GitHub
        </a>
      </div>
    </div>

    <div class="w-full h-64 md:h-full min-h-[300px]">
      <CuboAnimado client:load />
    </div>
  </div>
</div>