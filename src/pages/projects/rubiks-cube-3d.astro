---
import "../../styles/global.css";
import Header from '../../components/inicio/Header.astro'
import MainLayout from "../../layouts/MainLayout.astro";
import CuboAnimado from '../../components/CuboAnimated.tsx';
---

<MainLayout title="3D Rubik's Cube - Project Details">
  <main class="w-full min-h-screen bg-gray-900">
    <Header />
    
    <!-- Hero Section -->
    <section class="relative pt-24 pb-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          
          <!-- Breadcrumb -->
          <nav class="mb-8">
            <div class="flex items-center space-x-2 text-gray-400">
              <a href="/projects" class="hover:text-white transition-colors" data-i18n="breadcrumb.projects">Projects</a>
              <span>/</span>
              <span class="text-gray-300" data-i18n="project.cube.breadcrumb">3D Rubik's Cube</span>
            </div>
          </nav>

          <!-- Project Hero -->
          <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
            <div>
              <div class="mb-4">
                <span class="px-4 py-2 bg-blue-900 text-blue-300 rounded-full text-sm font-medium" data-i18n="project.featured">
                  Featured Project
                </span>
              </div>
              
              <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6" data-i18n="project.cube.title">
                Interactive 3D Rubik's Cube
              </h1>
              
              <p class="text-xl text-gray-400 mb-8 leading-relaxed" data-i18n="project.cube.hero_description">
                A fully interactive 3D Rubik's cube simulator featuring realistic physics, smooth animations, and intelligent auto-scrambling algorithms.
              </p>

              <div class="flex flex-wrap gap-3 mb-8">
                <span class="px-3 py-1 bg-blue-900 text-blue-300 rounded-full text-sm">React</span>
                <span class="px-3 py-1 bg-purple-900 text-purple-300 rounded-full text-sm">Three.js</span>
                <span class="px-3 py-1 bg-green-900 text-green-300 rounded-full text-sm">TypeScript</span>
                <span class="px-3 py-1 bg-orange-900 text-orange-300 rounded-full text-sm">React Three Fiber</span>
                <span class="px-3 py-1 bg-red-900 text-red-300 rounded-full text-sm">Astro</span>
              </div>

              <div class="flex flex-col sm:flex-row gap-4">
                <a 
                  href="https://github.com/vicctor-romero/rubiks-cube-3d" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="bg-gray-800 hover:bg-gray-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors flex items-center justify-center gap-2"
                >
                  <i class="fab fa-github"></i>
                  <span data-i18n="project.view_github">View on GitHub</span>
                </a>
                <a 
                  href="/" 
                  class="border-2 border-blue-500 text-blue-400 hover:bg-blue-500 hover:text-white font-semibold px-6 py-3 rounded-lg transition-colors text-center"
                  data-i18n="project.live_demo"
                >
                  Live Demo
                </a>
              </div>
            </div>

            <!-- Live Demo -->
            <div class="bg-gray-800 rounded-xl p-8">
              <div class="h-96 w-full">
                <CuboAnimado client:load />
              </div>
            </div>
          </div>

          <!-- Problem & Solution -->
          <div class="grid lg:grid-cols-2 gap-12 mb-20">
            <div class="bg-gray-800 rounded-xl p-8">
              <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
                <i class="fas fa-lightbulb text-yellow-400"></i>
                <span data-i18n="project.problem.title">The Challenge</span>
              </h2>
              <p class="text-gray-400 leading-relaxed" data-i18n="project.cube.problem">
                Creating a realistic 3D Rubik's cube that maintains 60fps performance while handling complex rotation algorithms and state management for 27 individual cubes with smooth animations.
              </p>
            </div>

            <div class="bg-gray-800 rounded-xl p-8">
              <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
                <i class="fas fa-cog text-green-400"></i>
                <span data-i18n="project.solution.title">The Solution</span>
              </h2>
              <p class="text-gray-400 leading-relaxed" data-i18n="project.cube.solution">
                Used React Three Fiber for optimized 3D rendering, implemented custom easing functions for smooth animations, and created an efficient state management system with direct object manipulation.
              </p>
            </div>
          </div>

          <!-- Key Features -->
          <div class="mb-20">
            <h2 class="text-3xl font-bold text-white text-center mb-12" data-i18n="project.features.title">
              Key Features
            </h2>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              <div class="bg-gray-800 rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-sync-alt text-white text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2" data-i18n="project.cube.features.smooth_rotations">
                  Smooth Rotations
                </h3>
                <p class="text-gray-400" data-i18n="project.cube.features.smooth_desc">
                  60fps animations with custom easing functions for realistic cube movements
                </p>
              </div>

              <div class="bg-gray-800 rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-palette text-white text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2" data-i18n="project.cube.features.realistic_colors">
                  Realistic Colors
                </h3>
                <p class="text-gray-400" data-i18n="project.cube.features.colors_desc">
                  Authentic Rubik's cube color scheme with proper face coloring logic
                </p>
              </div>

              <div class="bg-gray-800 rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-random text-white text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2" data-i18n="project.cube.features.auto_scramble">
                  Auto Scrambling
                </h3>
                <p class="text-gray-400" data-i18n="project.cube.features.scramble_desc">
                  Intelligent scrambling algorithm that creates solvable configurations
                </p>
              </div>

              <div class="bg-gray-800 rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-orange-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-mouse-pointer text-white text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2" data-i18n="project.cube.features.orbit_controls">
                  Orbit Controls
                </h3>
                <p class="text-gray-400" data-i18n="project.cube.features.controls_desc">
                  Intuitive camera controls for exploring the cube from any angle
                </p>
              </div>

              <div class="bg-gray-800 rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-mobile-alt text-white text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2" data-i18n="project.cube.features.responsive">
                  Responsive Design
                </h3>
                <p class="text-gray-400" data-i18n="project.cube.features.responsive_desc">
                  Optimized for all screen sizes from mobile to desktop
                </p>
              </div>

              <div class="bg-gray-800 rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-indigo-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <i class="fas fa-tachometer-alt text-white text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-2" data-i18n="project.cube.features.performance">
                  High Performance
                </h3>
                <p class="text-gray-400" data-i18n="project.cube.features.performance_desc">
                  Optimized rendering and state management for consistent 60fps
                </p>
              </div>
            </div>
          </div>

          <!-- Technical Implementation -->
          <div class="bg-gray-800 rounded-xl p-8 mb-20">
            <h2 class="text-3xl font-bold text-white mb-8" data-i18n="project.technical.title">
              Technical Implementation
            </h2>
            
            <div class="grid lg:grid-cols-2 gap-8">
              <div>
                <h3 class="text-xl font-bold text-white mb-4" data-i18n="project.technical.architecture">
                  Architecture
                </h3>
                <ul class="space-y-2 text-gray-400">
                  <li class="flex items-center gap-2">
                    <i class="fas fa-check text-green-400"></i>
                    <span data-i18n="project.cube.tech.react_fiber">React Three Fiber for 3D rendering</span>
                  </li>
                  <li class="flex items-center gap-2">
                    <i class="fas fa-check text-green-400"></i>
                    <span data-i18n="project.cube.tech.state_management">Efficient state management with useRef</span>
                  </li>
                  <li class="flex items-center gap-2">
                    <i class="fas fa-check text-green-400"></i>
                    <span data-i18n="project.cube.tech.direct_manipulation">Direct Three.js object manipulation</span>
                  </li>
                  <li class="flex items-center gap-2">
                    <i class="fas fa-check text-green-400"></i>
                    <span data-i18n="project.cube.tech.custom_easing">Custom easing functions for animations</span>
                  </li>
                </ul>
              </div>

              <div>
                <h3 class="text-xl font-bold text-white mb-4" data-i18n="project.technical.highlights">
                  Key Highlights
                </h3>
                <ul class="space-y-2 text-gray-400">
                  <li class="flex items-center gap-2">
                    <i class="fas fa-star text-yellow-400"></i>
                    <span data-i18n="project.cube.highlights.60fps">Consistent 60fps performance</span>
                  </li>
                  <li class="flex items-center gap-2">
                    <i class="fas fa-star text-yellow-400"></i>
                    <span data-i18n="project.cube.highlights.27_cubes">27 individual cube management</span>
                  </li>
                  <li class="flex items-center gap-2">
                    <i class="fas fa-star text-yellow-400"></i>
                    <span data-i18n="project.cube.highlights.smooth_transitions">Smooth rotation transitions</span>
                  </li>
                  <li class="flex items-center gap-2">
                    <i class="fas fa-star text-yellow-400"></i>
                    <span data-i18n="project.cube.highlights.memory_efficient">Memory-efficient rendering</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Project Navigation -->
          <div class="flex justify-between items-center pt-8 border-t border-gray-800">
            <a 
              href="/projects" 
              class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
            >
              <i class="fas fa-arrow-left"></i>
              <span data-i18n="project.back_to_projects">Back to Projects</span>
            </a>

            <div class="text-center">
              <p class="text-gray-400" data-i18n="project.more_coming">More projects coming soon!</p>
            </div>
          </div>

        </div>
      </div>
    </section>
  </main>
</MainLayout> 