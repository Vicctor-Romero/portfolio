---
import "../styles/global.css";
import Header from '../components/inicio/Header.astro'
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Contact - Victor Romero">
  <main class="w-full min-h-screen bg-gray-900">
    <Header />
    
    <section class="relative pt-24 pb-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
              Get In Touch
            </h1>
            <div class="w-24 h-1 bg-blue-500 mx-auto mb-8"></div>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto">
              Have a project in mind or just want to chat? I'd love to hear from you. Let's create something amazing together.
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div class="bg-gray-800 p-8 rounded-lg">
              <h2 class="text-2xl font-bold text-white mb-6">Send a Message</h2>
              <form class="space-y-6">
                <div>
                  <label for="name" class="block text-gray-300 mb-2">Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    class="w-full px-4 py-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Your Name"
                  />
                </div>
                <div>
                  <label for="email" class="block text-gray-300 mb-2">Email</label>
                  <input 
                    type="email" 
                    id="email" 
                    class="w-full px-4 py-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="your.email@example.com"
                  />
                </div>
                <div>
                  <label for="subject" class="block text-gray-300 mb-2">Subject</label>
                  <input 
                    type="text" 
                    id="subject" 
                    class="w-full px-4 py-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Project Discussion"
                  />
                </div>
                <div>
                  <label for="message" class="block text-gray-300 mb-2">Message</label>
                  <textarea 
                    id="message" 
                    rows="5" 
                    class="w-full px-4 py-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Tell me about your project..."
                  ></textarea>
                </div>
                <button 
                  type="submit" 
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
                >
                  Send Message
                </button>
              </form>
            </div>

            <!-- Contact Info -->
            <div class="space-y-8">
              <div>
                <h2 class="text-2xl font-bold text-white mb-6">Let's Connect</h2>
                <p class="text-gray-400 mb-8">
                  I'm always open to discussing new opportunities, interesting projects, or just having a great conversation about technology and development.
                </p>
              </div>

              <div class="space-y-6">
                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-envelope text-white"></i>
                  </div>
                  <div>
                    <h3 class="text-white font-semibold">Email</h3>
                    <p class="text-gray-400">victor@example.com</p>
                  </div>
                </div>

                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                    <i class="fab fa-linkedin text-white"></i>
                  </div>
                  <div>
                    <h3 class="text-white font-semibold">LinkedIn</h3>
                    <p class="text-gray-400">linkedin.com/in/victor-romero</p>
                  </div>
                </div>

                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                    <i class="fab fa-github text-white"></i>
                  </div>
                  <div>
                    <h3 class="text-white font-semibold">GitHub</h3>
                    <p class="text-gray-400">github.com/victor-romero</p>
                  </div>
                </div>

                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-map-marker-alt text-white"></i>
                  </div>
                  <div>
                    <h3 class="text-white font-semibold">Location</h3>
                    <p class="text-gray-400">Available for remote work</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout> 